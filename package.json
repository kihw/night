{
  "name": "nightmod",
  "version": "1.0.0",
  "description": "Application de bureau qui surveille votre activité et éteint automatiquement votre ordinateur",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "start": "electron src/main.js",
    "dev": "electron src/main.js --dev",
    "build": "electron-builder",
    "build-linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish=never",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.nightmod.app",
    "productName": "NightMod",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "!node_modules/**/*",
      "node_modules/electron/**/*"
    ],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "category": "Utility",
      "icon": "assets/icon.png",
      "desktop": {
        "Name": "NightMod",
        "Comment": "Protection nocturne intelligente",
        "Categories": "Utility;System;"
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "electron": "^28.0.0",
    "node-notifier": "^10.0.1"
  },
  "devDependencies": {
    "electron-builder": "^24.9.1"
  },
  "keywords": ["desktop", "utility", "power-management", "sleep", "shutdown"],
  "author": "NightMod Team",
  "license": "MIT"
}