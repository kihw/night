{
  "name": "nightmod",
  "version": "1.0.0",
  "description": "Application de bureau qui surveille votre activité et éteint automatiquement votre ordinateur Windows",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "start": "electron src/main.js",
    "dev": "electron src/main.js --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish=never",
    "postinstall": "electron-builder install-app-deps",
    "build-web": "vite build",
    "dev-web": "vite dev",
    "preview-web": "vite preview"
  },
  "build": {
    "appId": "com.nightmod.app",
    "productName": "NightMod",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json",
      "node_modules/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      "LICENSE.*",
      "locales/**/*",
      "resources/**/*",
      "*.pak",
      "*.bin",
      "*.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "zip",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "assets/icons/256x256.png",
      "requestedExecutionLevel": "asInvoker",
      "publisherName": "NightMod Team"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "NightMod",
      "runAfterFinish": true,
      "installerIcon": "assets/icons/256x256.png",
      "uninstallerIcon": "assets/icons/256x256.png"
    },
    "portable": {
      "artifactName": "NightMod-${version}-portable.exe"
    }
  },
  "dependencies": {
    "node-notifier": "^10.0.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.15.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.12.0",
    "lucide-react": "^0.460.0",
    "postcss": "^8.4.49",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.14",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.15.0",
    "vite": "^6.0.1"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "keywords": ["desktop", "utility", "power-management", "sleep", "shutdown", "windows"],
  "author": {
    "name": "NightMod Team",
    "email": "support@nightmod.app"
  },
  "license": "MIT"
}