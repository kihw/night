{
  "name": "nightmod",
  "version": "1.0.0",
  "description": "Application de bureau qui surveille votre activité et éteint automatiquement votre ordinateur",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "start": "electron src/main.js",
    "dev": "electron src/main.js --dev",
    "build": "electron-builder",
    "build-linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish=never",
    "postinstall": "electron-builder install-app-deps",
    "build-web": "vite build",
    "dev-web": "vite dev",
    "preview-web": "vite preview"
  },
  "build": {
    "appId": "com.nightmod.app",
    "productName": "NightMod",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "!node_modules/**/*",
      "node_modules/electron/**/*"
    ],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "category": "Utility",
      "icon": "assets/icon.png",
      "desktop": {
        "Name": "NightMod",
        "Comment": "Protection nocturne intelligente",
        "Categories": "Utility;System;"
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "electron": "^28.0.0",
    "node-notifier": "^10.0.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.15.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.12.0",
    "lucide-react": "^0.460.0",
    "postcss": "^8.4.49",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.14",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.15.0",
    "vite": "^6.0.1"
  },
  "devDependencies": {
    "electron-builder": "^24.9.1"
  },
  "keywords": ["desktop", "utility", "power-management", "sleep", "shutdown"],
  "author": "NightMod Team",
  "license": "MIT"
}